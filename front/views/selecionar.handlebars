<form action="/editar" method="post">
    <img src="../img/iconP.png" alt="" id="img-cadastro">
    <input type="text" value={{{dados.id}}} name="id" class="form-control" readonly>
    <input type="text" placeholder="Nome" value={{{dados.nome}}} name="nome" class="form-control">
    <input type="text" placeholder="Idade" value={{dados.idade}} name="idade" class="form-control">
